static_library("zlib") {
  configs -= [ "//build/config/compiler:default_warnings" ]
  configs += [ ":c90" ]

  sources = [
    "src/adler32.c",
    "src/compress.c",
    "src/crc32.c",
    "src/deflate.c",
    "src/gzclose.c",
    "src/gzlib.c",
    "src/gzread.c",
    "src/gzwrite.c",
    "src/infback.c",
    "src/inffast.c",
    "src/inflate.c",
    "src/inftrees.c",
    "src/trees.c",
    "src/uncompr.c",
    "src/zutil.c",
  ]

  public_configs = [ ":zlib_includes" ]
}

config("zlib_includes") {
  include_dirs = [ "src" ]
}

# TODO: This gives "warning: unknown argument ignored in clang-cl" on Windows. Fix this.
config("c90") {
  cflags_c = [ "-std=c90" ]
}
