static_library("freetype") {
  defines = [
    "FT2_BUILD_LIBRARY",
    "FT_CONFIG_OPTION_ERROR_STRINGS",
    "FT_CONFIG_OPTION_USE_PNG",
  ]

  sources = [
    "src/base/ftbase.c",
    "src/base/ftbitmap.c",
    "src/base/ftdebug.c",
    "src/base/ftinit.c",
    "src/base/ftmm.c",
    "src/base/ftsystem.c",
    "src/gzip/ftgzip.c",
    "src/raster/raster.c",
    "src/sfnt/sfnt.c",
    "src/smooth/smooth.c",
    "src/truetype/truetype.c",

    # Potentially unused.
    # "src/svg/ftsvg.c",
  ]

  public_configs = [ ":freetype_includes" ]

  deps = [ "//third_party/libpng" ]
}

config("freetype_includes") {
  include_dirs = [
    "custom-include",  # This overrides include!
    "include",
  ]
}
