shaders = [
  "rect_frag.glsl",
  "rect_vert.glsl",
  "text_frag.glsl",
  "text_vert.glsl",
  "image_vert.glsl",
  "image_frag.glsl",
]

if (is_mac) {
  bundle_data("shaders") {
    sources = shaders
    outputs = [ "{{bundle_resources_dir}}/shaders/{{source_file_part}}" ]
  }
}

if (is_linux || is_win) {
  copy("shaders") {
    sources = shaders
    outputs = [ "$root_out_dir/shaders/{{source_file_part}}" ]
  }
}
